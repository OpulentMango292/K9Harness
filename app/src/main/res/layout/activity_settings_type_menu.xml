<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.k9harnessandroidapp.SettingsTypeMenu">

    <Button
        android:id="@+id/but_nav_to_account_settings"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:elevation="0dp"
        android:onClick="goToSettingsAccount"
        android:text="@string/Account_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_nav_to_dog_settings"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:onClick="goToSettingsDog"
        android:text="@string/Dog_Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but_nav_to_account_settings" />

    <Button
        android:id="@+id/but_nav_to_notification_settings"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:onClick="goToSettingsNotification"
        android:text="@string/Notification_Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but_nav_to_dog_settings" />

    <Button
        android:id="@+id/but_nav_to_dog_overview"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:onClick="goToDogOverview"
        android:text="@string/Dog_Overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but_nav_to_bluetooth_settings" />

    <Button
        android:id="@+id/but_nav_to_bluetooth_settings"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:onClick="goToSettingsBluetooth"
        android:text="@string/Bluetooth_Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but_nav_to_notification_settings" />

</android.support.constraint.ConstraintLayout>
